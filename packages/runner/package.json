{
  "name": "@auditops/runner",
  "version": "1.0.0",
  "description": "Javari AuditOps Audit Runner - Playwright + Lighthouse auditing engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "auditops": "./dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx watch src/cli.ts",
    "auditops": "tsx src/cli.ts",
    "auth:generate": "tsx src/auth/generate-state.ts",
    "save-results": "tsx src/storage/save-results.ts",
    "generate-fix-packet": "tsx src/reporting/fix-packet.ts",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist output"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.39.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "crypto-js": "^4.2.0",
    "dotenv": "^16.4.0",
    "lighthouse": "^12.0.0",
    "playwright": "^1.42.0",
    "puppeteer": "^22.0.0",
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@types/crypto-js": "^4.2.0",
    "@types/node": "^20.10.0",
    "tsx": "^4.7.0",
    "typescript": "^5.4.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
