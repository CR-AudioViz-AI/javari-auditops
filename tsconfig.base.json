{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "strict": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "paths": {
      "@auditops/shared": ["./packages/shared/src"],
      "@auditops/shared/*": ["./packages/shared/src/*"],
      "@auditops/db": ["./packages/db/src"],
      "@auditops/db/*": ["./packages/db/src/*"],
      "@auditops/runner": ["./packages/runner/src"],
      "@auditops/runner/*": ["./packages/runner/src/*"],
      "@auditops/reporting": ["./packages/reporting/src"],
      "@auditops/reporting/*": ["./packages/reporting/src/*"]
    }
  },
  "exclude": ["node_modules", "dist", ".next", "output"]
}
